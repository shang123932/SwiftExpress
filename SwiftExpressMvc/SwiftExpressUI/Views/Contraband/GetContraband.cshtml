<script>
    $().ready(function () {

        $.ajax({
            url: "/Contraband/GetContrabands",
            type: "Post",
            dataType: "Json",
            success: function (res) {
                var tb = "";
                $(res.Contrabandlist).each(function () {
                    tb += "<tr>"
                        + "<td><input type='checkbox'/></td>"
                        + "<td class='hidden-xs'>" + this.ContrabandId + "</td>"
                        + "<td class='hidden-xs'>" + this.ItemName + "</td>"
                        + "</tr>";
                });
                $("#tb").html(tb);
            }

        })
    })



    function Cx() {
        var wp = $("#wp").val();
        $.ajax({
            url: "/Contraband/GetContrabands",
            type: "POST",
            dataType: "JSON",
            data: {
                ItemName: wp
            },
            success: function (res) {
                var tb = "";
                $(res.Contrabandlist).each(function () {
                    tb += "<tr>"
                        + "<td><input type='checkbox'/></td>"
                        + "<td class='hidden-xs'>" + this.ContrabandId + "</td>"
                        + "<td class='hidden-xs'>" + this.ItemName + "</td>"
                        + "</tr>";
                });

                $("#tb").html(tb);
            }

        })
    }
</script>


